<div class="floating-button">
  <a href="/collections" class="button button--primary">{{ section.settings['floating-btn-text'] }}</a>
</div>

{% stylesheet %}
     .floating-button {
       position:fixed;

    bottom:40px;
    right:40px;

     }

    .floating-button a {
      display: inline-flex;
  justify-content: center;
  align-items: center;
  border: 0;
  padding: 0 3rem;
  cursor: pointer;
  font: inherit;
    font-size: inherit;
    line-height: inherit;
  font-size: 1.5rem;
  text-decoration: none;
  color: rgb(var(--color-button-text));
  transition: box-shadow var(--duration-short) ease;
  -webkit-appearance: none;
  appearance: none;
  background-color: rgba(var(--color-button),var(--alpha-button-background));
    }
{% endstylesheet %}

{% schema %}
{
    "name": "Floating Button",
    "settings": [
        {
            "type": "text",
            "id": "floating-btn-text",
            "label": "Free Consultation",
            "default": "content"
        }
    ],
    "presets": [
        {
            "name": "Floating Button"
        }
    ]
}
{% endschema %}

