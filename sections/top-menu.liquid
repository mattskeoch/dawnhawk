<section class="top-menu-container">
  <div class="top-menu">
    <div class="first-option">
      <a href="{{ section.settings.first-url }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20px">
          <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
        </svg>

        <p class="first-option--text">{{ section.settings['first-text'] }}</p>
      </a>
    </div>

    <div class="second-option">
      <a href="{{ section.settings.second-url }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20px">
          <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm4.28 10.28a.75.75 0 000-1.06l-3-3a.75.75 0 10-1.06 1.06l1.72 1.72H8.25a.75.75 0 000 1.5h5.69l-1.72 1.72a.75.75 0 101.06 1.06l3-3z" clip-rule="evenodd" />
        </svg>

        <p class="second-option--text">{{ section.settings['second-text'] }}</p>
      </a>
    </div>
  </div>
</section>

{% style %}
  .top-menu-container {
    max-width: 1080px;
    width: 100%;
    margin: 0 auto;
  }

  .top-menu {
    display: flex;
    justify-content: end;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    gap: 1rem;
  }

  .first-option {
    display: flex;
  }

  .first-option a,
  .second-option a{
    display: flex;
    gap: 8px;
  }

  .first-option a,
  .second-option a{
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border: 0;
    padding: 0 2rem;
    cursor: pointer;
    font: inherit;
    font-size: inherit;
    line-height: 14px;
    font-size: 1.5rem;
    text-decoration: none;
    color: #fff;
    transition: box-shadow var(--duration-short) ease;
    -webkit-appearance: none;
    appearance: none;
    background-color: #0590e3 !important;
  }

  @media screen and (max-width: 767px) {
    .top-menu {
      display: none;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Top Menu",
  "class": "top-menu",
  "settings": [
    {
      "type": "text",
      "id": "first-text",
      "label": "First Text",
      "placeholder": "First Test Placeholder",
      "default": "First Test Default"
    },
    {
      "type": "url",
      "id": "first-url",
      "label": "First URL"
    },
    {
      "type": "text",
      "id": "second-text",
      "label": "Second Text",
      "placeholder": "Second Text Placeholder",
      "default": "Second Test Default"
    },
    {
      "type": "url",
      "id": "second-url",
      "label": "Second URL"
    },
        {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
