<section class="top-menu">
  <div class="first-option">
    <a href="{{ section.settings.first-url }}">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20px">
        <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
      </svg>

      <p class="first-option--text">{{ section.settings['first-text'] }}</p>
    </a>
  </div>

  <div class="second-option">
    <a href="{{ section.settings.second-url }}">
      <p class="second-option--text">{{ section.settings['second-text'] }}</p>
    </a>
  </div>
</section>

{% style %}
  .top-menu {
    display: flex;
    justify-content: end;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    gap: 1rem;
  }

  .first-option {
    display: flex;
  }

  .first-option a {
    display: flex;
  }

  @media screen and (max-width: 767px) {
    .top-menu {
      display: none;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Top Menu",
  "class": "top-menu",
  "settings": [
    {
      "type": "text",
      "id": "first-text",
      "label": "First Text",
      "placeholder": "First Test Placeholder",
      "default": "First Test Default"
    },
    {
      "type": "url",
      "id": "first-url",
      "label": "First URL"
    },
    {
      "type": "text",
      "id": "second-text",
      "label": "Second Text",
      "placeholder": "Second Text Placeholder",
      "default": "Second Test Default"
    },
    {
      "type": "url",
      "id": "second-url",
      "label": "Second URL"
    },
        {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Top Menu Banner",
      "category": "Banners",
      "settings": {

      }
    }
  ]
}
{% endschema %}
