<div class="section-{{ section.id }}-padding">
    <div
    class="two-column-section page-width  isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
  <div class="column column-left">
    {% for block in section.blocks %}
      <div class="content">
        <div>
       {{ block.settings.liquid-snippet }}
        </div>
        <div>
        <h2>{{ block.settings.title-text }}</h2>
        <p>{{ block.settings.text }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="column column-right">
    <div class="form-wrapper">
    <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/embed/v2.js"></script>
    <script>
      hbspt.forms.create({
        region: "na1",
        portalId: "8903454",
        formId: "2433c604-eb07-4355-b31f-4429b0f05fdf"
      });
    </script>
  </div>
  </div>
</div>
  </div>


{% stylesheet %}

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
.two-column-section {
  display: flex;
  flex-wrap: wrap;
  gap: 1.4rem;
}

.column-left {
  flex: 0 0 30%;
  max-width: 30%;
  box-sizing: border-box;
}

.column-left .content {
    display: flex;
}

  .column-left .content > div > h2 {
    padding: 0px;
    margin: 0px;
    line-height: 1;
  }

  .column-left .content > div > p {
    padding: 0px;
    margin: 0px;
    line-height: 2.2;
  }


  .content > div > svg {
    width: 24px;
    color: #0590e3;
  }

.column-right {
  flex: 1;
  box-sizing: border-box;
}

@media (max-width: 900px) {
  .two-column-section {
    flex-direction: column; 
  }

  .column-left,
  .column-right {
    flex: 1;
    max-width: 100%;
  }
}

{% endstylesheet %}

