{% schema %}
{
  "name": "Two Column Section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "name": "content-block",
      "type": "content",
      "settings": [
   {
      "type": "liquid",
      "id": "liquid-snippet",
      "label": "Render icon snippet"
    },
        {
          "type": "text",
          "id": "title-text",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two Column Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}


