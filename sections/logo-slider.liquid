{% style %}
  .sponsor-slider-wrapper{
    width: 100%;
    overflow: hidden;
    position: relative;
    height: 150px;
    margin: 0 auto;
    padding: 4rem 0;
  }

  @keyframes slide {
    0% {transform: translateX(0);}
    100% {transform: translateX(-100%);}
  }
  @keyframes slide-2 {
    0% {transform: translateX(100%);}
    100% {transform: translateX(0);}
  }

  .sponsor-slider{
    width: auto;
    position: absolute;
    white-space: nowrap;

  }
  .sponsor-slider .item{
    display: inline-block;
    width: 200px;
    height: 100px;
    margin-left: 30px;
  }
  .sponsor-slider .item img{
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .slide-1{
    animation: slide 28s infinite linear;
  }
  .slide-2{
    animation: slide-2 28s infinite linear;
  }
{% endstyle %}

